{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "build/**"]
        },
        "test": {
            "dependsOn": ["^test"]
        },
        "check-types": {
            "dependsOn": ["^check-types"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}